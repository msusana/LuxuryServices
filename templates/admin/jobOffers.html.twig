 {% for offer in admin_infos.jobOffer %}
                                <div class="card job-card">
                                    <div class="card-content">
                                        <span class="title">
                                            <span class="card-title">{{offer.jobTitle}}</span>
                                            <span class="ref grey-text">Ref. {{offer.id}}</span>
                                        </span>
                                        <div class="metas mb-20">
                                            <div class="meta">
                                                <i class="material-icons">&#xE53E;</i>{{offer.salary}}&euro;
                                            </div>
                                            <div class="meta">
                                                <i class="material-icons">&#xE916;</i>{{ offer.startingDate|date("m/d/Y") }}
                                            </div>
                                            <div class="meta">
                                                <i class="material-icons">&#xE55F;</i>{{offer.location}}
                                            </div>
                                        </div>
                                        <p class="truncate-text">{{offer.description}}</p>
                                    </div>
                                    <div class="card-action">
                                        <div class="row">
                                        <div class="col s12 m6">
                                            <a class="btn btn-md primary border waves-effect waves-dark" href="{{ path ('client_edit', {'id': offer.client.id})}}">Update</a>
                                        </div>
                                            <div class="col s12 m6">
                                                <form method="post" action="{{ path('job_offer_delete', {'id': offer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this Job Offer?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
                                                    <button class="btn waves-effect waves-light red"><i class="material-icons">&#xE872;</i> Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            
                        
                        {% endfor %}
                        <div class="no-item"></div>
            