{% extends 'base.html.twig' %}

{% block title %}Candidate{% endblock %}

{% block body %}
   <div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Candidate space</h2>
                        <span class="white-text">About the company & Professionnal informations</span>
                        <ol class="breadcrumb">
                            <li><a href="#!">Home</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
<div class="container mt-30 mb-30">
    <table class="table">
        <tbody>
    
            <tr>
                <th>Gender</th>
                <td>{{ candidate.gender ? 'Woman' : 'Man' }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ candidate.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ candidate.lastName }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ candidate.adress }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ candidate.country }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ candidate.nationality }}</td>
            </tr>
            <tr>
                <th>Passport</th>
                {% if candidate.passportFile %}
                <td><a href="{{asset ('/assets/uploads/passport/') ~ candidate.passportFile }}" target="_blank"><i class="material-icons">&#xE24D;</i> passeport.jpg</a></td>
                {% else %}
                <td>No File</td>
                {% endif %}
            </tr>
            <tr>
                <th>CurriculumVitae</th>
                 {% if candidate.curriculumVitae %}
                <td><a href="{{asset ('/assets/uploads/curriculumVitae/') ~ candidate.curriculumVitae}}" target="_blank"><i class="material-icons">&#xE24D;</i> CV.pdf</a></td>
                {% else %}
                <td>No File</td>
                {% endif %}
                           
            </tr>
            <tr>
                <th>ProfilPicture</th>
                  {% if candidate.profilPicture %}
                <td><a href="{{asset ('/assets/uploads/profilePicture/') ~ candidate.profilPicture }}" target="_blank"><i class="material-icons">&#xE24D;</i> profil_picture.jpg</a></td>
                {% else %}
                <td>No File</td>
                {% endif %}
            </tr>
            <tr>
                <th>CurrentLocation</th>
                <td>{{ candidate.currentLocation }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
                <td>{{ candidate.dateOfBirth ? candidate.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PlaceOfBirth</th>
                <td>{{ candidate.placeOfBirth }}</td>
            </tr>
            <tr>
                <th>Availability</th>
                <td>{{ candidate.availability ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ candidate.shortDescription }}</td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}