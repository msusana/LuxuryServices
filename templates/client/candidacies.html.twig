{% extends 'base.html.twig' %}

{% block title %}Edit Client{% endblock %}

{% block body %}
   <div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Customer space</h2>
                        <span class="white-text">About the company & Professionnal informations</span>
                        <ol class="breadcrumb">
                            <li><a href="#!">Home</a></li>
                            <li class="active">Customer Space</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
     
      

        {% for candidacy in candidacies %}
    <div class="card-candidacies black-text">
        <div class="card-content">
            <span class="title">
                <span class="card-title-admin"> Job : {{ (candidacy.jobOffer.jobTitle ) ? candidacy.jobOffer.jobTitle : 'none' }}</span>
            </span>
            <div class="row mb-20"> 
                <div class="col s12 m6">
                    <div class="row">
                        <div class="card-title-admin center-align">{{ candidacy.jobOffer.jobCategory.category}}</div>
                            <div class="col s12">
                             <span class="ref grey-text">Ref.{{ (candidacy.jobOffer.id ) ? candidacy.jobOffer.id : 'none' }}</span>  
                            </div>
                             <div class="col s12">
                                <i class="material-icons">&#xE55F;</i>Description : {{ (candidacy.jobOffer.description ) ? candidacy.jobOffer.description : 'none' }}
                            </div>
                            <div class="col s12">
                                <i class="material-icons">&#xE55F;</i>Location : {{ (candidacy.jobOffer.location ) ? candidacy.jobOffer.location : 'none' }}
                            </div>
                            <div class="col s12">
                                üóìÔ∏è Job Starting date: {{(candidacy.jobOffer.startingDate|date('m-d-Y') ) ? candidacy.jobOffer.startingDate|date('m-d-Y')  : 'none' }}
                            </div>
                            <div class="col s12">
                                üóìÔ∏è Job Closing date: {{(candidacy.jobOffer.closingDate|date('m-d-Y') ) ? candidacy.jobOffer.closingDate|date('m-d-Y')  : 'none' }}
                            </div>
                            <div class="col s12">
                                Salary {{(candidacy.jobOffer.salary ) ? candidacy.jobOffer.salary  : 'none' }}
                            </div>
                           
                        </div>
                    </div>

                    <div class="col s12 m6">
                        <div class="row">
                            <div class="card-title-admin center-align">Candidate</div> 
                            <div class="meta">
                                üìÜ Candidacy date {{(candidacy.dateCreated|date('m-d-Y') ) ? candidacy.dateCreated|date('m-d-Y') : 'none' }}
                            </div>
                            <div class="col s12">
                                Last Name : {{(candidacy.candidate.lastName ) ? candidacy.candidate.lastName : 'none' }}
                            </div>
                            <div class="col s12">
                                First Name : {{(candidacy.candidate.firstName ) ? candidacy.candidate.firstName : 'none' }}
                            </div>
                            <div class="col s12">
                                üì© Email : {{(candidacy.candidate.user.email ) ? candidacy.candidate.user.email : 'none' }}
                            </div>
                              <div class="col s12">
                                Experience : {{(candidacy.candidate.experience.experience ) ? candidacy.candidate.experience.experience : 'none' }}
                            </div> 
                            <div class="col s12">
                                Job Category : {{(candidacy.candidate.jobCategory.category ) ? candidacy.candidate.jobCategory.category : 'none' }}
                            </div>
                            
                        </div>
                    </div>
            </div>
        </div>
           <div class="card-action">
            <div class="row">

                
                 <div class="col s12 m3">
                    <a class="btn btn-md primary border waves-effect waves-dark buttonAccesAddNotes" href="{{ path ('showCandidate', {'id': candidacy.candidate.id})}}" >See Candidate</a>
                </div>
                <div class="col s12 m3">
                    <a class="btn btn-md primary border waves-effect waves-dark buttonAccesSeeNotes" href="{{ path ('job_offer_show', {'id': candidacy.jobOffer.id})}}" >See Job Offer</a>
                </div> 
                
                <div class="col s12 m3">
                    <form method="post" action="{{ path('candidacy_delete', {'id': candidacy.id}) }}" onsubmit="return confirm('Are you sure you want to delete this Candidacy?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ candidacy.id) }}">
                        <button class="btn waves-effect waves-light red"><i class="material-icons">&#xE872;</i> Delete</button>
                    </form>
                </div>
                
            </div>
        </div>
    </div>


{% endfor %}
<div class="no-item"></div>

      
         

</div>
</div>

{% endblock %}
