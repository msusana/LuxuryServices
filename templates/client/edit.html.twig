{% extends 'base.html.twig' %}

{% block title %}Edit Client{% endblock %}

{% block body %}
   <div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Customer space</h2>
                        <span class="white-text">About the company & Professionnal informations</span>
                        <ol class="breadcrumb">
                            <li><a href="#!">Home</a></li>
                            <li class="active">Customer Space</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
          {% for message in app.flashes('success') %}
            <div class="card-panel teal lighten-2 white-text">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="card-panel red darken-4 white-text">
                {{ message }}
            </div>
        {% endfor %}

        {% if  form_errors(form2.newPassword.first) is not empty %}
            <div class="card-panel red darken-4 white-text">
               {{ form_errors(form2.newPassword.first) }}
            </div>
        {% endif %}
      

        <!-- Page Content-->
          <section class="gray-bg">
            <div class="container">
                <div class="row">
                    <div class="score-container">
                    {% if pourcentageCompleted == 100 %}
                        <h4> Hooray ! Your profile is complete. </h4>
                        {% else %}
                        <h4> Profile uncompleted. </h4>
                        {% endif %}
                        <div class="c100 p{{pourcentageCompleted|round}} small complete ">
                            <span>{{pourcentageCompleted|round}}%</span>
                            <div class="slice">
                                <div class="bar"></div>
                                <div class="fill"></div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </section>

        <!-- Page Content-->
            {{ include('client/_form.html.twig') }}
         
         </div>  
         </br>
         <div class="row center"> 
            <div class="col-xs-12 col-sm-3"></div>   
                <div class="col-xs-12 col-sm-6">
                        {{ include('client/_delete_form.html.twig') }}
                </div>
            <div class="col-xs-12 col-sm-3"></div>  
    </div>

</div>
</div>

{% endblock %}