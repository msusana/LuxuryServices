{% extends 'base.html.twig' %}

{% block title %}Edit Candidate{% endblock %}

{% block body %}
   <div class="base">
    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Your profile</h2>
                        <span class="white-text">Personnal & Professionnal informations</span>
                        <ol class="breadcrumb">
                            <li><a href="#!">Home</a></li>
                            <li class="active">Profile</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
            {% set profilecompleted = 0 %}
        {% for data in dataCandidate %}
            {% if data is not null %}
            {% set profilecompleted = profilecompleted +1 %}
        {% endif %}
        {% endfor %}
        {% set pourcentageCompleted = profilecompleted * 100 / lengthData %}


          {% for message in app.flashes('success') %}
            <div class="card-panel teal lighten-2 white-text">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="card-panel red darken-4 white-text">
                {{ message }}
            </div>
        {% endfor %}

        {% if  form_errors(form2.newPassword.first) is not empty %}
            <div class="card-panel red darken-4 white-text">
               {{ form_errors(form2.newPassword.first) }}
            </div>
        {% endif %}
      

        <!-- Page Content-->
          <section class="gray-bg">
            <div class="container">
                <div class="row">
                    <div class="score-container">
                    {% if pourcentageCompleted == 100 %}
                        <h4>
                            <img src="https://i.imgur.com/s9bPVaK.gif" style="height: 80px; width: 201px;"> &nbsp;
                            &nbsp; Hooray ! Your profile is complete.
                        </h4>
                        {% else %}
                              <img src="https://c.tenor.com/iAzbib-SIuUAAAAM/disney-moana.gif" style="height: 100px; width: 100px;"> &nbsp;
                            &nbsp; Profile uncompleted.
                        {% endif %}
                        <div class="c100 p{{pourcentageCompleted|round}} small complete ">
                            <span>{{pourcentageCompleted|round}}%</span>
                            <div class="slice">
                                <div class="bar"></div>
                                <div class="fill"></div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </section>

        {{ include('candidate/_form.html.twig', {'button_label': 'Update'}) }}

    </div>

</div>

{% endblock %}
